import sqlite3
conn = sqlite3.connect('project.db')
c = conn.cursor()
c.execute('''CREATE TABLE IF NOT EXISTS supplier
	(name text, category integer, code integer)''')

name = str(input('Name of Supplier: '))
cate = int(input('Category of Supplier: '))
code = int(input('Code of Supplier: '))
params = (name, cate, code)
c.execute("INSERT INTO supplier VALUES (?,?,?)", params)
conn.commit()
for row in c.execute('SELECT * FROM supplier'):
	print (row)
conn.close()
